<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cadastrar Ingrediente</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h1 class="mb-4">Cadastrar Ingrediente</h1>
    <form action="/cadastrar-ingrediente" method="POST">
      <div class="mb-3">
        <label for="comida_id" class="form-label">Selecione a Receita</label>
        <select class="form-select" id="comida_id" name="comida_id" required>
          <% comidas.forEach(comida => { %>
            <option value="<%= comida.id %>"><%= comida.titulo %></option>
          <% }) %>
        </select>
      </div>
      <div class="mb-3">
        <label for="descricao" class="form-label">Descrição do Ingrediente</label>
        <input type="text" class="form-control" id="descricao" name="descricao" required>
      </div>
      <div class="mb-3">
        <label for="quantidade" class="form-label">Quantidade</label>
        <input type="text" class="form-control" id="quantidade" name="quantidade" required>
      </div>
      <div class="mb-3">
        <label for="unidade" class="form-label">Unidade</label>
        <input type="text" class="form-control" id="unidade" name="unidade" required>
      </div>
      <button type="submit" class="btn btn-primary">Cadastrar Ingrediente</button>
      <a href="./dashboard" class="btn btn-secondary">Voltar</a>
    </form>
  </div>
</body>
</html>
