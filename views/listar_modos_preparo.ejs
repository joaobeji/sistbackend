<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Listar Modos de Preparo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h1 class="mb-4">Lista de Modos de Preparo</h1>
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Receita ID</th>
          <th>Descrição</th>
          <th>Número do Passo</th>
        </tr>
      </thead>
      <tbody>
        <% modosPreparo.forEach(modo => { %>
          <tr>
            <td><%= modo.id %></td>
            <td><%= modo.comida_id %></td>
            <td><%= modo.descricao %></td>
            <td><%= modo.passo_numero %></td>
            <td>
              <a href="/editar-modo-preparo/<%= modo.id %>" class="btn btn-warning">Editar</a>
              <form action="/deletar-modo-preparo/<%= modo.id %>" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Tem certeza que deseja deletar este modo de preparo?');">Deletar</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
      
    </table>
    <a href="/dashboard" class="btn btn-secondary">Voltar para a Dashboard</a>
  </div>
</body>
</html>
